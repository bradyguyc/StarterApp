<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyNextBook.Views.WelcomeScreen"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:CommonCode.CustomControls;assembly=CommonCode"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:dx1="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
    xmlns:dxs="http://schemas.devexpress.com/maui"
    xmlns:fonts="clr-namespace:CommonCode.Helpers;assembly=CommonCode"
    xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
    xmlns:sharedcontrols="clr-namespace:CommonCode.CustomControls;assembly=CommonCode"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:MyNextBook.ViewModels"
    Title="Welcome to MyNextBook"
    x:DataType="viewmodels:WelcomeScreenViewModel">
    <Grid BackgroundColor="{dx:ThemeColor PrimaryContainer}" RowDefinitions="65,180,*">
     
            <Label
                Grid.Column="0"
                Grid.Row="0"
                BackgroundColor="{dx:ThemeColor SecondaryContainer}"
                Text="MyNextBook Account:"
                TextColor="{dx:ThemeColor OnSecondaryContainer}" />

            <!--  OpenLibrary Credentials Section  -->
            <Border
                Grid.Row="1"
                Padding="12"
                BackgroundColor="{dx:ThemeColor SecondaryContainer}"
                Stroke="{dx:ThemeColor Primary}"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1">
                <VerticalStackLayout Spacing="16">
                    <Label
                        FontAttributes="Bold"
                        Text="openlibrary.org credentials"
                        TextColor="{dx:ThemeColor OnSecondaryContainer}" />

                    <dxs:TextEdit
                        HeightRequest="50"
                        PlaceholderText="Username"
                        Text="{Binding OpenLibraryUsername, Mode=TwoWay}"
                        TextColor="{dx:ThemeColor OnSecondaryContainer}" />
                    <dxs:PasswordEdit
                        BoxMode="Outlined"
                        HelpText="*Required"
                        LabelText="Password"
                        PasswordIconVisibility="Always"
                        PlaceholderText="Enter password"
                        Text="{Binding OpenLibraryPassword, Mode=TwoWay}"
                        TextColor="{dx:ThemeColor OnSecondaryContainer}" />

                    <Button Command="{Binding TestOLCredentialsCommand}" Text="Test Sign In" />
                </VerticalStackLayout>
            </Border>




        <Border
            Grid.Row="2"
            Margin="5,0,5,5"
            BackgroundColor="{dx:ThemeColor SecondaryContainer}"
            Stroke="{dx:ThemeColor Outline}"
            StrokeShape="RoundRectangle 30"
            StrokeThickness="3">
            <ScrollView BackgroundColor="{dx:ThemeColor SecondaryContainer}">
                <WebView Margin="4,8,4,8" BackgroundColor="{dx:ThemeColor SecondaryContainer}">
                    <WebView.Source>
                        <HtmlWebViewSource Html="{Binding IntroText}" />
                    </WebView.Source>
                </WebView>
            </ScrollView>
        </Border>
        <sharedcontrols:ErrorPopupView
            Grid.Row="0"
            Grid.Column="0"
            ControlTemplate="{StaticResource ErrorPopupStandard}"
            ErrorCode="{Binding PopupDetails.ErrorCode}"
            ErrorMessage="{Binding PopupDetails.ErrorMessage}"
            ErrorReason="{Binding PopupDetails.ErrorReason}"
            IsVisible="{Binding PopupDetails.IsOpen}"
            ShowErrorPopup="{Binding PopupDetails.IsOpen, Mode=TwoWay}"
            ZIndex="1" />

    </Grid>
</ContentPage>